<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_tgl_jadwal_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/work_sans_regular"
        android:textColor="@color/abu_tua"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="07 September 2021," />

    <TextView
        android:id="@+id/tv_jam_mulai_jadwal_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/work_sans_regular"
        android:textColor="@color/abu_tua"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/tv_tgl_jadwal_summary"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="08:00 AM" />

    <View
        android:id="@+id/line_strip"
        android:layout_width="4dp"
        android:layout_height="1dp"
        android:layout_marginStart="4dp"
        android:background="@color/abu_tua"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_jam_mulai_jadwal_summary"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_jam_selesai_jadwal_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/work_sans_regular"
        android:textColor="@color/abu_tua"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/line_strip"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10:00 AM" />

</androidx.constraintlayout.widget.ConstraintLayout>