<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_pilih_tanggal_kelas"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_md"
        android:layout_marginEnd="@dimen/margin_sm"
        android:text="@string/tv_pilih_tanggal"
        android:textSize="16sp"
        android:textColor="@color/hitam"
        android:fontFamily="@font/work_sans_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_pilih_jam_kelas"
        android:background="@drawable/bg_container_grey"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/tv_pilih_jam_kelas"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_md"
        android:layout_marginStart="@dimen/margin_sm"
        android:text="@string/tv_pilih_jam"
        android:textSize="16sp"
        android:textColor="@color/hitam"
        android:fontFamily="@font/work_sans_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_pilih_tanggal_kelas"
        android:background="@drawable/bg_container_grey"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"/>

</androidx.constraintlayout.widget.ConstraintLayout>