<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/rg_tingkat_sd"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rb_kelas_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hitam"
            android:button="@null"
            android:text="1"
            android:textSize="@dimen/font_md"
            android:fontFamily="@font/work_sans_regular"
            android:checked="false"
            android:drawablePadding="@dimen/padding_xsm"
            android:drawableStart="@drawable/radio_button_selector"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rb_kelas_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hitam"
            android:button="@null"
            android:text="2"
            android:textSize="@dimen/font_md"
            android:fontFamily="@font/work_sans_regular"
            android:checked="false"
            android:drawablePadding="@dimen/padding_xsm"
            android:drawableStart="@drawable/radio_button_selector"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rb_kelas_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hitam"
            android:button="@null"
            android:text="3"
            android:textSize="@dimen/font_md"
            android:fontFamily="@font/work_sans_regular"
            android:checked="false"
            android:drawablePadding="@dimen/padding_xsm"
            android:drawableStart="@drawable/radio_button_selector"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rb_kelas_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hitam"
            android:button="@null"
            android:text="4"
            android:textSize="@dimen/font_md"
            android:fontFamily="@font/work_sans_regular"
            android:checked="false"
            android:drawablePadding="@dimen/padding_xsm"
