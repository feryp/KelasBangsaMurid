<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/merah_primary</item>
        <item name="colorPrimaryDark">@color/putih</item>
        <item name="colorAccent">@color/merah_primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/putih</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.Tab" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="NumberPickerTextColorStyle">
        <item name="android:textColorPrimary">@color/putih</item>
    </style>

    <!-- Chip Choice Custom -->
    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background_color_chip_state_list</item>
        <item name="android:textColor">@color/text_color_chip_state_list</item>
        <item name="chipStrokeColor">@color/stroke_color_chip_state_list</item>
    </style>

    <!-- Bottom Sheet Bar -->
    <style name="BottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Rating Bar Small Custom -->
    <style name="RatingBarSmall" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlActivated">#E9B90A</item>
        <item name="colorControlNormal">@color/abu_muda</item>
    </style>

    <!-- Rating Bar Medium Custom -->
    <style name="RatingBarMedium" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlActivated">#E9B90A</item>
        <item name="colorControlNormal">@color/abu_muda</item>
    </style>

    <!-- Rating Bar write Custom -->
    <style name="customRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
    </style>

    <!-- Tab Layout -->
    <style name="CustomTextApprearance" parent="Widget.Design.TabLayout">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/work_sans_medium</item>
    </style>

</resources>