<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_paket_belajar"
    android:layout_width="325dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="15dp"
    android:padding="16dp"
    android:background="@drawable/bg_item_paket_belajar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_nama_paket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/hitam"
                android:fontFamily="@font/work_sans_semi_bold"
                tools:text="Paket Belajar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_tgl_paket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="12 Des 2020"
                    android:textSize="10sp"
                    android:textColor="@color/hitam"
                    android:fontFamily="@font/work_sans_regular"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/hitam" />

                <TextView
                    android:id="@+id/tv_item_jam_mulai_paket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="08:00 AM"
                    android:textSize="10sp"
                    android:textColor="@color/hitam"
                    android:fontFamily="@font/work_sans_regular"/>

                <View
                    android:layout_width="5dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:background="@color/hitam" />

                <TextView
                    android:id="@+id/tv_item_jam_selesai_paket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="09:00 AM"
                    android:textSize="10sp"
                    android:textColor="@color/hitam"
                    android:fontFamily="@font/work_sans_regular"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_tingkat_pendidikan_paket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/hitam"
                android:fontFamily="@font/work_sans_regular"
                tools:text="Tingkat SMA Kelas 10" />

            <TextView
                android:id="@+id/tv_item_peserta_paket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/hitam"
                android:fontFamily="@font/work_sans_regular"
                tools:text="2 Peserta" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|end"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/foto_guru_paket"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/ic_placeholder"/>

            <TextView
                android:id="@+id/tv_item_nama_guru_paket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="8sp"
                android:textColor="@color/hitam"
                android:fontFamily="@font/work_sans_regular"
                tools:text="John Doe"
                tools:ignore="SmallSp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_address_grey"/>

            <TextView
                android:id="@+id/tv_item_alamat_paket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="10sp"
                android:textColor="@color/abu"
                android:fontFamily="@font/work_sans_regular"
                tools:text="SMAN 70 Jakarta, Jl. Bulungan Blok C/1, Kramat Pela, Kebayoran Baru, Jakarta Selatan, DKI Jakarta, Indonesia"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|end"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_item_harga_paket"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textSize="16sp"
                android:textColor="@color/abu"
                android:fontFamily="@font/work_sans_semi_bold"
                tools:text="Rp 40.000" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>