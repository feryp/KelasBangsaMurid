<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_paket_belajar"
    android:layout_width="325dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_item_paket_belajar">


    <TextView
        android:id="@+id/tv_nama_paket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/work_sans_semi_bold"
        android:textColor="@color/hitam"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Paket Belajar" />

    <LinearLayout
        android:id="@+id/layout_tgl_paket"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nama_paket"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/tv_tgl_paket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans_regular"
            android:textColor="@color/hitam"
            android:textSize="12sp"
            tools:ignore="UnusedAttribute"
            tools:text="12 Des 2020" />

        <View
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@color/hitam" />

        <TextView
            android:id="@+id/tv_jam_mulai_paket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans_regular"
            android:gravity="center"
            android:textColor="@color/hitam"
            android:textSize="12sp"
            tools:ignore="UnusedAttribute"
            tools:text="08:00 AM" />

        <View
            android:layout_width="5dp"
            android:layout_height="1dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:background="@color/hitam" />

        <TextView
            android:id="@+id/tv_jam_selesai_paket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans_regular"
            android:gravity="center"
            android:textColor="@color/hitam"
           android:textSize="12sp"
            tools:ignore="UnusedAttribute"
            tools:text="09:00 AM" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_tingkat_pendidikan_paket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/work_sans_regular"
        android:textColor="@color/hitam"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_tgl_paket"
        tools:text="SMA" />

    <TextView
        android:id="@+id/tv_tingkat_kelas_paket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/work_sans_regular"
        android:textColor="@color/hitam"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tv_tingkat_pendidikan_paket"
        app:layout_constraintTop_toBottomOf="@id/layout_tgl_paket"
        tools:text="Kelas 10" />

    <TextView
        android:id="@+id/tv_jumlah_peserta_paket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/work_sans_regular"
        android:textColor="@color/hitam"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tingkat_pendidikan_paket"
        tools:text="2 Peserta" />


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/foto_guru_paket"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_placeholder" />

        <TextView
            android:id="@+id/tv_nama_guru_paket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/work_sans_regular"
            android:gravity="center"
            android:textColor="@color/hitam"
            android:textSize="8sp"
            tools:ignore="SmallSp"
            tools:text="John Doe" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_jumlah_peserta_paket">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_alamat_paket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:fontFamily="@font/work_sans_regular"
                android:textColor="@color/abu"
                android:textSize="9sp"
                app:drawableStartCompat="@drawable/ic_address_grey"
                tools:ignore="SmallSp"
                tools:text="SMAN 70 Jakarta, Jl. Bulungan Blok C/1, Kramat Pela, Kebayoran Baru, Jakarta Selatan, DKI Jakarta, Indonesia" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|end">

            <TextView
                android:id="@+id/tv_harga_paket"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/work_sans_semi_bold"
                android:gravity="bottom"
                android:textColor="@color/abu"
                android:textSize="16sp"
                tools:text="Rp 40.000" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>