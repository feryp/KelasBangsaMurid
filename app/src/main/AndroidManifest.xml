<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kelasbangsa.murid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.paket.PaketActivity"></activity>
        <activity android:name=".ui.notification.NotificationActivity" />
        <activity android:name=".ui.allcategory.AllCategoryActivity" />
        <activity android:name=".ui.loginverification.SignInVerificationActivity" />
        <activity android:name=".ui.newpassword.NewPasswordActivity" />
        <activity android:name=".ui.forgotpasswordverification.ForgotPasswordVerification" />
        <activity android:name=".ui.forgotpassword.ForgotPasswordActivity" />
        <activity android:name=".ui.changeaccount.ChangeAccountActivity" />
        <activity android:name=".ui.personalinfo.PersonalInfoActivity" />
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".ui.signin.SignInActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".ui.onboarding.OnBoardingActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".ui.main.MainActivity"
            android:screenOrientation="locked"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>